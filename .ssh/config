# 多条连接共享
ControlMaster auto
ControlPath "/tmp/ssh %r@%h:%p"

# 保持一个连接72小时
ControlPersist 72h

# 自动添加主机密钥，避免每次连接新IP时输入yes
StrictHostKeyChecking no

# 测试跳板机
Host m1-test
	HostName xxx.xxx.xxx.xxx
	User asins
	IdentityFile  ~/.ssh/asins_rsa

# XX应用 测试机器 需跳板机
Host XXapp-test-m1
	HostName 11.239.114.118
	User asins
	IdentityFile  ~/.ssh/asins_rsa
	ProxyCommand ssh m1-test exec /usr/bin/nc %h %p 2>/dev/null

